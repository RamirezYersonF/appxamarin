<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appventascp3.contraseña" BackgroundColor="#FDE49C" >
    <ContentPage.Content>
        <StackLayout  HorizontalOptions="Center" Spacing="10" WidthRequest="350" Padding="0,10">
            <Image Source="icono_appventa.png" WidthRequest="200"></Image>
            <Label Text="Change Password" FontAttributes="Bold" TextColor="#876445" FontSize="40" HorizontalTextAlignment="Center"></Label>
            <StackLayout Background="#ffff" VerticalOptions="FillAndExpand" Padding="20" Spacing="25">
                <Label Text="New Password"  FontAttributes="Bold" TextColor="#876445" FontSize="30" HorizontalTextAlignment="Center"></Label>
                <Entry Placeholder="old password" PlaceholderColor="#CA965C" FontSize="20" ></Entry>
                <Entry Placeholder="New Password" PlaceholderColor="#CA965C" FontSize="20"></Entry>
                <Entry Placeholder="Confirm New Password" PlaceholderColor="#CA965C" FontSize="20"></Entry>
                <Button Text="Log In" TextColor="White" FontAttributes="Bold" FontSize="20" Background="#CA965C" CornerRadius="8" ></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>